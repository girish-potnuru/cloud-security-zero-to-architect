{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {
      "type": "string"
    },
    "ruleName": {
      "type": "string",
      "defaultValue": "AI Observability - High Error Rate"
    },
    "logType": {
      "type": "string",
      "defaultValue": "AIObservabilityMetrics"
    },
    "errorRateThreshold": {
      "type": "int",
      "defaultValue": 0.3
    }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "apiVersion": "2022-11-01",
      "name": "[format('{0}/Microsoft.SecurityInsights/{1}', parameters('workspaceName'), parameters('ruleName'))]",
      "properties": {
        "displayName": "[parameters('ruleName')]",
        "severity": "High",
        "enabled": true,
        "query": "[concat('let threshold = toreal(', string(parameters('errorRateThreshold')), '); AIObservabilityMetrics_CL | extend status_val = coalesce(status, status_s) | summarize errors = countif(status_val == \"error\"), total = count() by bin(TimeGenerated, 5m) | extend errorRate = todouble(errors) / todouble(total) | where errorRate > threshold | project TimeGenerated, errorRate, errors, total')]",
        "queryFrequency": "PT5M",
        "queryPeriod": "PT30M",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0,
        "alertRuleTemplateName": null,
        "suppressionEnabled": false,
        "tactics": [],
        "techniques": [],
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "enabled": true,
            "reopenClosedIncident": true,
            "lookbackDuration": "PT1H",
            "matchingMethod": "AllEntities"
          }
        },
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "customDetails": {
          "LogType": "[parameters('logType')]",
          "ErrorRateThreshold": "[string(parameters('errorRateThreshold'))]"
        }
      }
    }
  ]
}
